{
  "name": "@dancastillo/error",
  "version": "0.0.3",
  "description": "A small utility for generating consistent errors",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "homepage": "https://github.com/dancastillo/error#readme",
  "bugs": {
    "url": "https://github.com/dancastillo/error/issues"
  },
  "author": "Dan Castillo<dancastillo99@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dancastillo/error.git"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "error",
    "utility"
  ],
  "scripts": {
    "test": "tsc --project tsconfig.test.json && borp --coverage --check-coverage --lines 100",
    "format": "prettier --check .",
    "format:check": "prettier --write .",
    "lint": "eslint ./src",
    "prepare": "husky",
    "build": "rm -rf dist && tsup",
    "prepublish": "npm run lint && npm run format:check && npm run test && npm run build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@eslint/js": "^9.9.1",
    "@types/node": "^22.5.0",
    "borp": "^0.18.0",
    "c8": "^10.1.2",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0"
  },
  "engines": {
    "node": ">=22.6.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
